    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Townly",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/game/Townly.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "console": "integratedTerminal",
            "outputCapture": "std",
            "showAsyncStacks": true
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "test.ts",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "console": "integratedTerminal",
            "outputCapture": "std",
            "showAsyncStacks": true
        }
    ]
}